server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name {{ host.url }};

	root /var/www/{{ host.webroot }};
	index index.php index.html;

    ssl_certificate /etc/letsencrypt/live/{{ host.url }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ host.url }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ host.url }}/chain.pem;

    # security
    include                 nginxconfig.io/security.conf;

    # restrict methods
    if ($request_method !~ ^(GET|POST|HEAD|CONNECT)$) {
        return '405';
    }

    # logging
    access_log /var/log/nginx/{{ host.url }}.access.log;
    error_log  /var/log/nginx/{{ host.url }}.error.log warn;

    # index.php
    index      index.php;

    # index.php fallback
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # additional config
    include nginxconfig.io/general.conf;

    # handle .php
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php-fpm.sock;
        include      nginxconfig.io/php_fastcgi.conf;
    }
}


# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name {{ host.url }};
    include     nginxconfig.io/letsencrypt.conf;

    location / {
        return 301 https://{{ host.url }}$request_uri;
    }

}